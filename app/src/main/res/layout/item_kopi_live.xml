<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_ripple"
    android:foreground="@drawable/border_line"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <RelativeLayout
        android:id="@+id/rlThumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle_ras">

        <ImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="3dp"
            tools:src="@drawable/acehgayoarabika" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="Kopi Aceh Gayo Arabika"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito_reguler"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="You can enjoy this arabica coffee with various brewing methods. For V 60 and Vietnamese drip, you can choose a medium grind. For french press and cold brew, choose a coarse grind. For moka pot and espresso enthusiasts, you can choose a fine grind."/>

    </LinearLayout>

</LinearLayout>